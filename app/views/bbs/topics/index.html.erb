<div class="row">
  <div class="col-sm-12">
    <div class="btn-group margin-bottom-40" role="group" aria-label="...">
      <% TopicNode.all.each do |node| %>
        <%= link_to node.title, bbs_topics_node_path(node) , class:'btn btn-default'%>
      <% end %>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-sm-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= render 'node_info', node: @node %>
      </div>
      <div class="panel-body">
        <%= render partial: '/bbs/topics/topic', collection: @topics %>

        <div class="text-center">
          <div class="pagination">
            <%= will_paginate @topics, renderer: BootstrapPagination::Rails %>
          </div>
        </div>
      </div>
    </div>
  </div>



  <div class="col-sm-3">
    <%= render 'sidebar' %>
  </div>

</div>

