<h1>Listing comments</h1>

<table class="table">
  <thead>
    <tr>
      <th>Content</th>
      <th>Commentable Type</th>
      <th>Commentable link</th>
      <th>Comment User</th>
      <th>Operation</th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.content %></td>
        <td><%= comment.commentable_type %></td>
        <td><a href="<%= url_for comment.commentable %>">Show</a></td>
        <td><%= comment.user.email %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment) %>
        <%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_comment_path %>
