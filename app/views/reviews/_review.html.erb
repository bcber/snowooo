<div class="review row">
  <div class="user-container">
    <div class="img">
      <%= image_tag review.user.avatar, class:"img-responsive img-thumbnail" ,style: "width:64px; height:64px;"%>
    </div>
    <div>
      <%= link_to review.user.name, review.user %>
    </div>
  </div>
  <div class="content-container">
    <div class="row">
      <div class="col-xs-2">
        <span class="label label-info rounded"><i class="fa fa-bookmark"></i> 推荐度</span>
      </div>
      <div class="col-xs-10">
        <div class="rate" style="padding-bottom: 10px;" data-rate="<%= review.stars %>" data-readonly="true"></div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-2">
        <span class="label label-info rounded"><i class="fa fa-bookmark"></i> 不足</span>
      </div>
      <div class="col-xs-10">
        <p><%= review.bad %></p>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-2">
        <span class="label label-info rounded"><i class="fa fa-bookmark"> 优点</i></span>
      </div>
      <div class="col-xs-10"><p><%= review.good %></p></div>
    </div>

    <div class="row">
      <div class="col-xs-2">
        <span class="label label-info rounded"><i class="fa fa-bookmark"> 综合</i></span>
      </div>
      <div class="col-xs-10"><p><%= review.composite %></p></div>
    </div>

    <div class="row">
      <div class="col-xs-12">
        <%= time_ago_in_words(review.created_at) %>前
      </div>
    </div>
  </div>
</div>
<hr class="devider devider-dotted">
