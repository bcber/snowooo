<div class="col-xs-12">

<%= form_for [@reviewable, @review], html:{ class: "sky-form",style:"border:none;" } do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2>有<%= @review.errors.count %>个错误</h2>

      <ul class="list-unstyled">
        <% @review.errors.full_messages.each do |message| %>
          <li class="alert alert-danger fade in alert-dismissable">
            <%= message %>
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <section>
    <%= f.label :stars %>
    <div class="rateable" data-rate="<%= f.object.stars %>"></div>
    <div class="rateable-message"></div>
    <%= f.text_field :stars, class: "form-control hide" %>
  </section>

  <section>
    <%= f.label :good %><br>
    <%= f.text_area :good , class: "form-control", rows:"3"%>
    <div class="note note-info">不能少于10个字符.</div>
  </section>

  <section class="field">
    <%= f.label :bad %>
    <%= f.text_area :bad , class: "form-control", rows:"3" %>
    <div class="note note-info">不能少于10个字符.</div>
  </section>

  <section class="field">
    <%= f.label :composite %>
    <%= f.text_area :composite, class: "form-control", rows:"6" %>
    <div class="note note-info">不能少于10个字符.</div>
  </section>

  <br>
  <div class="actions">
    <%= f.submit "点评", class:"btn-u" %>
  </div>
<% end %>

</div>
