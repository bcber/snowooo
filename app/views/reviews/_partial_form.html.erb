<%= form_for [reviewable, review], html:{ class: "sky-form",style:"border:none;" } do |f| %>
  <section>
    <%= f.label :stars %>
    <div class="rateable"></div>
    <div class="rateable-message"></div>
    <%= f.text_field :stars, class: "form-control hide" %>
  </section>

  <section>
    <%= f.label :good %><br>
    <%= f.text_area :good , class: "form-control", rows:"3"%>
    <div class="note note-info">不能少于10个字符.</div>
  </section>

  <section class="field">
    <%= f.label :bad %>
    <%= f.text_area :bad , class: "form-control", rows:"3" %>
    <div class="note note-info">不能少于10个字符.</div>
  </section>

  <section class="field">
    <%= f.label :composite %>
    <%= f.text_area :composite, class: "form-control", rows:"6" %>
    <div class="note note-info">不能少于10个字符.</div>
  </section>

  <br>
  <div class="actions">
    <%= f.submit "点评", class:"btn-u" %>
  </div>
<% end %>