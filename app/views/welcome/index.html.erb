                    <% end %>
                  </div>
                </div>
              </div>
              <div class="col-xs-4">
                <% @snowboots[1..-1].in_groups_of(2,false) do |group| %>
                    <div class="max-height-200">
                      <div class="row">
                        <% group.each do |snowboot| %>
                            <div class="col-xs-6">
                              <div class="img-thumb">
                                <%= link_to snowboot do %>
                                    <% if snowboot.qiniu_images.present? %>
                                        <%= image_tag snowboot.qiniu_images.first.original.medium , class:"img-responsive"%>
                                    <% else %>
                                        <%= image_tag snowboot.images.first.large, class:"img-responsive" %>
                                    <% end %>
                                <% end %>
                              </div>
                              <div class="text-center">
                                <strong><%= snowboot.brand %></strong>
                                <%= link_to snowboot do %>
                                    <h5><%= snowboot.name %></h5>
                                <% end %>
                              </div>
                            </div>
                        <% end %>
                      </div>
                    </div>

                <% end %>
              </div>
            </div>
          </div>
          <div id="snowbinding" class="tab-pane magazine-sb-categories">
            <div class="row">
              <div class="col-xs-8">
                <div class="max-height-600">
                  <%= link_to @snowbindings.first do %>
                      <% if @snowbindings.first.qiniu_images.present? %>
                          <%= image_tag @snowbindings.first.qiniu_images.first.original.medium , class:"img-responsive"%>
                      <% else %>
                          <%= image_tag @snowbindings.first.images.first.large, class:"img-responsive" %>
                      <% end %>
                  <% end %>
                  <div class="text-center">
                    <strong><%= @snowbindings.first.brand %></strong>
                    <%= link_to @snowbindings.first do %>
                        <h5><%= @snowbindings.first.name %></h5>
                    <% end %>
                  </div>
                </div>
              </div>
              <div class="col-xs-4">
                <% @snowbindings[1..-1].in_groups_of(2,false) do |group| %>
                    <div class="max-height-200">
                      <div class="row">
                        <% group.each do |snowbinding| %>
                            <div class="col-xs-6">
                              <div class="img-thumb">
                                <%= link_to snowbinding do %>
                                    <% if snowbinding.qiniu_images.present? %>
                                        <%= image_tag snowbinding.qiniu_images.first.original.medium , class:"img-responsive"%>
                                    <% else %>
                                        <%= image_tag snowbinding.images.first.large, class:"img-responsive" %>
                                    <% end %>
                                <% end %>
                              </div>
                              <div class="text-center">
                                <strong><%= snowbinding.brand %></strong>
                                <%= link_to snowbinding do %>
                                    <h5><%= snowbinding.name %></h5>
                                <% end %>
                              </div>
                            </div>
                        <% end %>
                      </div>
                    </div>

                <% end %>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
    <hr/>
    <div class="row">
      <div class="col-xs-12">
        <div class="headline headline-md"><h2>雪场信息</h2></div>
        <% @places.in_groups_of(4,false).each do |group| %>
            <div class="row">
                <% group.each do |place| %>
                  <div class="col-xs-3">
                    <%= link_to place do %>
                        <div class="img-thumb">
                          <%= image_tag place.cover.medium , class:'img-responsive'%>
                        </div>
                    <% end %>
                    <div class="text-center">
                      <%= link_to place do %>
                          <h3><%= place.name %></h3>
                      <% end %>
                      <%= rating_for place %>
                    </div>
                  </div>
                <% end %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-xs-3 col-xs-offset-1">
    <div class="row">
      <div class="headline headline-md"><h2>最新视频</h2></div>
      <% @videos.in_groups_of(2,false) do |group| %>
        <% group.each do |video| %>
            <div class="col-xs-6">
              <%= link_to video do%>
                <div class="img-video">
                  <%= image_tag video.thumbnail %>
                  <p><%= video.title %></p>
                </div>
              <% end %>
            </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>