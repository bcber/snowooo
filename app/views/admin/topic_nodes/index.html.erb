<div class="row margin-bottom-20"></div>
<div class="row">
  <div class="col-xs-12">
    <%= link_to '新建', new_admin_topic_node_path, class: "btn btn-default btn-xs" %>
  </div>
</div>
<table class="table">
  <thead class="table">
  <tr>
    <th>类别名</th>
    <th>描述</th>
    <th>操作</th>
  </tr>
  </thead>

  <tbody>
  <% @topic_nodes.each do |node| %>
      <tr>
        <td><%= node.title %></td>
        <td><%= node.description %></td>
        <td>
          <%= link_to '编辑', edit_admin_topic_node_path(node), class:"btn btn-default btn-xs" %>
          <%= link_to '删除', admin_topic_node_path(node), method: :delete, data: { confirm: '确认删除?' } , class:"btn btn-danger btn-xs"%></td>
      </tr>
  <% end %>
  </tbody>
</table>

