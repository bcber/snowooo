<div class="row margin-bottom-20"></div>
<div class="row">
  <div class="col-xs-12">
    <%= link_to '新建', new_admin_snowbinding_path, class: "btn btn-default btn-xs" %>
  </div>
</div>
<div class="row">
  <table class="table">
    <thead>
    <tr>
      <th>名称</th>
      <th>最近置顶</th>
      <th>最近推荐</th>
      <th>操作</th>
    </tr>
    </thead>
    <tbody>
    <% @snowbindings.each do |snowbinding| %>
        <tr>
          <td><%= snowbinding.name %></td>
          <td><%= snowbinding.up_at %></td>
          <td><%= snowbinding.recommend_at %></td>
          <td>
            <%= link_to '详情', snowbinding, class: "btn btn-default btn-xs" %>
            <%= link_to '置顶' , up_admin_snowbinding_path(snowbinding), class:"btn btn-default btn-xs"%>
            <%= link_to '取消置顶', down_admin_snowbinding_path(snowbinding), class:"btn btn-default btn-xs" %>
            <%= link_to "推荐", recommend_admin_snowbinding_path(snowbinding), class:"btn btn-default btn-xs" %>
            <%= link_to '编辑', edit_admin_snowbinding_path(snowbinding), class: "btn btn-default btn-xs" %>
            <%= link_to '删除', admin_snowbinding_path(snowbinding), data:{confirm:"确定?"},method: :delete,class: "btn btn-danger btn-xs" %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div class="row">
  <div class="text-center">
    <div class="pagination">
      <%= will_paginate @snowbindings , renderer: BootstrapPagination::Rails%>
    </div>
  </div>
</div>
