<table class="table">
  <thead>
    <tr>
      <th>属性</th>
      <th>值</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td>邮件</td>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <td>登录次数</td>
      <td><%= @user.sign_in_count %></td>
    </tr>
    <tr>
      <td>最近一次登录时间</td>
      <td><%= @user.current_sign_in_at %></td>
    </tr>
    <tr>
      <td>上一次登录时间</td>
      <td><%= @user.last_sign_in_at %></td>
    </tr>
    <tr>
      <td>最近一次登录ip</td>
      <td><%= @user.current_sign_in_ip %></td>
    </tr>
    <tr>
      <td>上一次登录ip</td>
      <td><%= @user.last_sign_in_ip %></td>
    </tr>
    <tr>
      <td>头像</td>
      <td><%= image_tag @user.avatar ,style:"width:200px;height:200px;"%></td>
    </tr>
    <tr>
      <td>管理员</td>
      <td><% if @user.isAdmin %> 是 <% else %> 否 <% end %></td>
    </tr>
  </tbody>
</table>


<%= link_to '修改', edit_admin_user_path(@user), class:"btn btn-default btn-xs"%>
<%= link_to '返回用户列表', admin_users_path , class:"btn btn-default btn-xs"%>
