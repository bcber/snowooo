<table class="table">
  <thead>
    <tr>
      <th>属性</th>
      <th>值</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td>邮件</td>
      <td><%= @admin_user.email %></td>
    </tr>
    <tr>
      <td>登录次数</td>
      <td><%= @admin_user.sign_in_count %></td>
    </tr>
    <tr>
      <td>最近一次登录时间</td>
      <td><%= @admin_user.current_sign_in_at %></td>
    </tr>
    <tr>
      <td>上一次登录时间</td>
      <td><%= @admin_user.last_sign_in_at %></td>
    </tr>
    <tr>
      <td>最近一次登录ip</td>
      <td><%= @admin_user.current_sign_in_ip %></td>
    </tr>
    <tr>
      <td>上一次登录ip</td>
      <td><%= @admin_user.last_sign_in_ip %></td>
    </tr>
    <tr>
      <td>账户确认时间</td>
      <td><%= @admin_user.confirmed_at %></td>
    </tr>
    <tr>
      <td>确认邮件发送时间</td>
      <td><%= @admin_user.confirmation_sent_at %></td>
    </tr>
    <tr>
      <td>头像</td>
      <td><%= image_tag @admin_user.avatar %></td>
    </tr>
    <tr>
      <td>网站角色</td>
      <td><%= @admin_user.roles %></td>
    </tr>
    <tr>
      <td>操作</td>
      <td>
        <%= render 'roles' %>
        
        <button class="btn btn-primary btn-xs" data-toggle="modal" data-target="#role-options-<%= @admin_user.id %>">
        修改角色
        </button>
      </td>
    </tr>
  </tbody>
</table>


<%= link_to '修改', edit_admin_user_path(@admin_user), class:"btn btn-default btn-xs"%>
<%= link_to '返回用户列表', admin_users_path , class:"btn btn-default btn-xs"%>
