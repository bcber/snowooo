<div class="row margin-bottom-20"></div>
<div class="row margin-bottom-20">
<%= link_to '新建场地', new_admin_place_path ,class:"btn btn-default btn-xs"%>
</div>
<div class="row">
<table class="table">
  <thead>
    <tr>
      <th>名称</th>
      <th>最近置顶</th>
      <th>最近推荐</th>
      <th>操作</th>
    </tr>
  </thead>

  <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><%= place.name %></td>
        <td><%= place.up_at %></td>
        <td><%= place.recommend_at %></td>
        <td><%= link_to '详情', place, class:"btn btn-default btn-xs" %>
        <%= link_to '编辑', edit_admin_place_path(place) , class:"btn btn-default btn-xs"%>
        <%= link_to '置顶' , up_admin_place_path(place), class:"btn btn-default btn-xs"%>
        <%= link_to '取消置顶' , down_admin_place_path(place), class:"btn btn-default btn-xs"%>
        <%= link_to "推荐", recommend_admin_place_path(place), class:"btn btn-default btn-xs" %>
        <%= link_to '删除', admin_place_path(place), method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-danger btn-xs"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="text-center">
  <div class="pagination">
    <%= will_paginate @places, renderer: BootstrapPagination::Rails %>
  </div>
</div>

<br>


