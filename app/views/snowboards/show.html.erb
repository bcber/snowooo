<p id="notice"><%= notice %></p>

<table class="table">
  <thead>
    <tr>
      <th>key</th>
      <th>value</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td>name</td>
      <td><%= @snowboard.name %></td>
    </tr>
  
    <tr>
      <td>style</td>
      <td><%= @snowboard.style %></td>
    </tr>
    <tr>
      <td>brand</td>
      <td><%= @snowboard.brand %></td>
    </tr>
    <tr>
      <td>length</td>
      <td>
        <%= @snowboard.length %>         
      </td>
    </tr>
    <tr>
      <td>profile</td>
      <td><%= @snowboard.profile %></td> 
    </tr>
    <tr>
      <td>shape</td>
      <td><%= @snowboard.shape %></td>
    </tr>
    <tr>
      <td>flex</td>
      <td><%= @snowboard.flex %></td>
    </tr>
    <tr>
      <td>effectiveEdge</td>
      <td><%= @snowboard.effectiveedge %></td>
    </tr>
    <tr>
      <td>waistWidth</td>
      <td><%= @snowboard.waistwidth %></td>
    </tr>
    <tr>
      <td>sidecutRadius</td>
      <td><%= @snowboard.sidecutradius %></td>
    </tr>
    <tr>
      <td>stanceWidth</td>
      <td><%= @snowboard.stancewidth %></td>
    </tr>
    <tr>
      <td>stanceSetback</td>
      <td><%= @snowboard.stancesetback %></td>
    </tr>
    <tr>
      <td>mount</td>
      <td><%= @snowboard.mount %></td>
    </tr>
    <tr>
      <td>images</td>
      <td>
        <% @snowboard.images.each do |image| %>
          <div class="row">
            <h3><%= image.color %></h3>
            <br>
            <%= image_tag image.small , class:"img-thumbnail" , style:"width:50px;hegith:50px"%>
            <%= image_tag image.qismall , class:"img-thumbnail" , style:"width:50px;hegith:50px"%>
            <br>
            <%= image_tag image.medium , class:"img-thumbnail",style:"width:100px;hegith:100px"%>
            <%= image_tag image.qimedium , class:"img-thumbnail",style:"width:100px;hegith:100px"%>
            <br>
            <%= image_tag image.large , class:"img-thumbnail",style:"width:150px;hegith:150px"%>
            <%= image_tag image.qilarge , class:"img-thumbnail",style:"width:150px;hegith:150px"%>
          </div>
        <% end %>
      </td>
    </tr>
    <tr>
      <td>original url</td>
      <td>
        <%= link_to @snowboard.origurl, @snowboard.origurl, target: "_blank" %>
      </td>
    </tr>
  </tbody>
</table>

<% if can? :edit, Snowboard %>
  <%= link_to 'Edit', edit_snowboard_path(@snowboard) , class: "btn-u btn-u-sea"%> |
<% end %>

<%= link_to 'Back', snowboards_path , class: "btn-u btn-u-default btn-xs" %>
