<div class="headline headline-md blue">
  <h2>雪场位置</h2>
</div>
<% Place.get_tags_on(:regions).in_groups_of(3, false) do |group| %>
  <div class="row" style="margin-bottom: 12px;">
    <% group.each do |region| %>
        <div class="col-sm-4" >
          <span><%= link_to region, places_region_path(region) %></span>
          <span class="badge rounded-2x badge-sea"><%= Place.get_tags_count(:regions, region) %></span>
        </div>
    <% end %>
  </div>
<% end %>
