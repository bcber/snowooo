<div class="row">
  <div class="col-sm-3">
    <%= image_tag @user.avatar.bigthumb %>
    <hr>
    <h2><%= @user.name.present? ? @user.name: t("users.messages.no_name")%></h2>
    <h3><%= @user.email %></h3>
  </div>
  <div class="col-sm-9">
    <div class="profile">
      <h2 class="heading-md"><%= t("profile") %></h2>

      <dl class="dl-horizontal">
        <dt><%= t("users.messages.binding_social") %></dt>
        <dd>
          <% @user.omniauths.each do |social| %>
            <button class="btn  btn-<%= social.provider %>">
              <i class="fa fa-<%= social.provider %>"></i> <%= t(social.provider) %>
            </button>
          <% end %>
        </dd>
        <hr>
      </dl>
    </div>
  </div>
</div>

<% if can? :edit, User %>
  <%= link_to t('modify'), modify_path , class:"btn btn-default"%>
<% end %>