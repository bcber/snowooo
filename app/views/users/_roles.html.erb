<div class="modal fade" id="role-options-<%= @user.id %>" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <a href="#" class="close" data-dismiss="modal">&#215;</a>
        <h3>Change Role</h3>
      </div>

      <%= form_for @user, :html => {:method => :put} do |f| %>

      <div class="modal-body">
        <% User::ROLES.each do |role| %>
          <%= check_box_tag "user[roles][]", role , @user.roles.include?(role)%><%= role %>
        <% end %>
      </div>

      <div class="modal-footer">
        <%= f.submit "Change Role", class: "btn btn-primary btn-xs" %>
        <a href="#" class="btn btn-default btn-xs" data-dismiss="modal">cancel</a>
      </div>

      <% end %>

    </div>
  </div>
</div>