<%= form_for(@user, url: modify_path(id:@user), multipart: true,html:{class:"sky-form"}) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %></h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <h3>修改我的个人资料</h3>
    <div class="form-group">
      <%= f.label :avatar %>
      <%= f.file_field :avatar, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, class:"form-control" %>
    </div>

    <button class="btn-u" type="submit">确认修改</button>
    <%= link_to '取消', profile_path ,class:'btn-u btn-u-default' %>
<% end %>
