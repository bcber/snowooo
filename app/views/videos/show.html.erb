<div class="row">
  
  <div class="col-md-8 col-md-offset-2">
    <h1><%= @video.title %> &nbsp;<a href="<%= @video.link %>" target="_blank"><span class="icon-login"></span></a></h1>
    
    <p><%= @video.description %></p>
    <div id="youkuplayer" style="width:100%;height:480px;"></div>
    
    <br><br>
    
    <% if can? :manage, Video %>
    <%= link_to 'Edit', edit_video_path(@video), class:"btn btn-xs btn-primary" %>
    <% end %>
    <%= link_to 'Back', videos_path,class:"btn btn-xs btn-default" %>
  </div>
  
</div>

<script>
  player = new YKU.Player('youkuplayer',{
  styleid: '0',
  client_id: 'c11677d902e397c0',
  vid: '<%= @video.vid %>'
  });
</script>


