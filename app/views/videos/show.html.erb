<div class="row" style="margin-top:50px;">
  
  <div class="col-md-8 col-md-offset-2">
    <h1><%= @video.title %> &nbsp;<a href="<%= @video.url %>" target="_blank"><span class="icon-login"></span></a></h1>
    
    <p><%= @video.description %></p>
    <div id="youkuplayer" style="width:100%;height:480px;"></div>
    <hr/>
    <div class="media">
      <h3> <span class="comment-count"><%= @video.comments.count %></span> <%= t("comments") %></h3>
    </div>
    <div class="comment_container">
      <%= render partial: "comments/comment", collection: @video.comments %>
    </div>
  
    <% if current_user %>
      <%= form_for [@video, @comment], remote: true do |f| %>
        <%= render 'comments/form'%>
      <% end %>
    <% end %>
  </div>
</div>
<script>
  player = new YKU.Player('youkuplayer',{
  styleid: '0',
  client_id: 'c11677d902e397c0',
  vid: '<%= @video.vid %>'
  });
</script>


