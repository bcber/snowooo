<%= link_to user_omniauth_authorize_path(:weibo) do %>
  <br/>
  <img src="http://www.sinaimg.cn/blog/developer/wiki/240.png" alt="">
<% end %>

<% if controller_name != 'sessions' %>
    <br/><br/>
  <%= link_to "登录", login_path , class:"btn btn-default"%>
<% end %>

<% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <br/><br/>
  <%= link_to "注册", signup_path , class:"btn btn-default"%>
<% end %>

<% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <br /><br/>
  <%= link_to "忘记密码?", new_password_path(resource_name) , class:"btn btn-default"%>
<% end %>

<% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <br /><br/>
  <%= link_to "没收到确认邮件?", new_confirmation_path(resource_name) , class:"btn btn-default"%>
<% end %>

<% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <br />
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) , class:"btn btn-default"%>
<% end %>
