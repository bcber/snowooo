<div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3" style="margin-top:50px;">
    <%= form_for(resource, as: resource_name, url: login_path , html: {class:"reg-page"}) do |f| %>
        <div class="reg-header">
          <h2>登录</h2>
        </div>
        <div class="input-group margin-bottom-20">
          <span class="input-group-addon"><i class="fa fa-user"></i></span>
          <%= f.email_field :email, autofocus: true , class: 'form-control', placeholder: '邮箱'%></div>

        <div class="input-group margin-bottom-20">
          <span class="input-group-addon"><i class="fa fa-lock"></i></span>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' , placeholder:'密码'%></div>


        <div class="row">
          <div class="col-md-5 col-md-offset-1">
            <label class="checkbox" for="">
              <% if devise_mapping.rememberable? %>
                  <%= f.check_box :remember_me %> 记住我
              <% end %>
            </label>
          </div>
          <div class="col-md-6">
            <%= f.submit "登录" , class: 'btn-u pull-right'%>
          </div>
        </div>
      <hr/>
        <div class="row">
          <div class="col-sm-4">
           <%= link_to '忘记密码?',new_password_path(resource_name)  %>
          </div>
          <div class="col-sm-4">
            <%= link_to '微博登录',user_omniauth_authorize_path(:weibo) %>
          </div>
          <div class="col-sm-4">
            <%= link_to '微信登录','#' %>
          </div>
        </div>
    <% end %>
</div>


