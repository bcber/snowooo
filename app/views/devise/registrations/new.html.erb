<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2" style="margin-top: 80px;">

  <%= devise_error_messages! %>

  <%= form_for(resource, as: resource_name, url: signup_path, html:{class:"reg-page"}) do |f|  %>
    <div class="reg-header">
      <h2>注册</h2>
      <p>已经注册了? 那 <%= link_to '登录', login_path %></p>
    </div>

    <label>昵称</label>
    <%= f.text_field :name, autofocus: true, class: 'form-control margin-bottom-20' %>

    <label>邮箱</label>
    <%= f.email_field :email, autofocus: true , class: 'form-control margin-bottom-20'%>

    <div class="row">
      <div class="col-sm-6">
        <label>密码</label>
        <%= f.password_field :password, autocomplete: "off" , class: 'form-control', placeholder:"密码至少为6位"%>
      </div>
      <div class="col-sm-6">
        <label>再次输入密码</label>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder:"密码至少为6位" %>
      </div>
    </div>
    <hr>

    <div class="row">
      <div class="col-lg-6">
        <p class="color-green">注册雪圈网代表您同意我们的用户守则</p>
      </div>
      <div class="col-lg-6 text-right">
        <div><%= f.submit "注册" , class: 'btn-u'%></div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
          <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
              <br /><br/>
              <%= link_to "没收到确认邮件?", new_confirmation_path(resource_name)%>
          <% end %>
      </div>

    </div>
  <% end %>
</div>
