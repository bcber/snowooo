<h2>
  <% if @style %>
    所有 <%= @style %> 的固定器
  <% else %>
    所有的固定器
  <% end %>
</h2>

<div class="row">
  <div class="col-md-2">
    <div class="row">
      <div class="headline">
        <h4>Choose Style</h4>
      </div>

      <div class="row">
        <ul class="list-unstyled col-xs-8">
          <% Snowbinding::STYLES.each do |style| %>
            <li> <%= link_to style, snowbindings_path(style: style) , class:'color-green'%></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="col-md-10">
    <div class="list-container">
      <ul style="list-style:none" class="item-list">
      <% @snowbindings.each do |snowbinding| %>
      <li style="float:left;width:195px;height:310px; margin:10px;position:relative;">
        <div class="thumbnails thumbnail-style thumbnail-kenburn">
          <div class="thumbnail-img">
            <div class="overflow-hidden">
              <% if snowbinding.images.empty? %>
                <% if snowbinding.qiniu_images.empty? %>
                    暂时还没有图片
                <% else %>
                    <%= image_tag snowbinding.qiniu_images.first.original.medium, class:"img-responsive" %>
                <% end %>
              <% else %>
                <%= image_tag snowbinding.images.first.medium, class:"img-responsive"%>
              <% end %>
            </div>
            <%= link_to 'Show', snowbinding, class:"btn-more hover-effect" %>
          </div>

          <div class="caption">

            <div class="content-boxes-v1">
              <strong><%= snowbinding.brand %></strong>
              <h4>
                <%= link_to snowbinding.name, snowbinding %>
                <p>
                  <%= snowbinding.style %>
                </p>
              </h4>
            </div>
              
          </div>
        </div>
      </li>
      <% end %>
      </ul>
    </div>

    <div class="text-center">
      <div class="pagination">
        <%= will_paginate @snowbindings, renderer: BootstrapPagination::Rails %>
      </div>
    </div>
  </div>
</div>
